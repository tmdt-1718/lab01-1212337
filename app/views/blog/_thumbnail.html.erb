<div class="blog-thumbnail">
	<div class="card-block">
		<h4 class="card-title">
			<%= link_to blog_path(a.id), class: "card-title" do %>
				<%= a.title %>
			<% end %>
		</h4>
		<img class="img-fluid" src="<%= a.image_url %>">
		<h6 class="card-subtitle mb-2 text-muted">Người đăng: <%= a.user.name %></h6>
		<p class="card-text">
			<%= truncate(a.content) %>
		</p>
		<p class="card-text">Số lượt xem: <%= a.view %></p>
	</div>
</div>